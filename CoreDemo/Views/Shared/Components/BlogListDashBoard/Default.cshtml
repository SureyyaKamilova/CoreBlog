@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Blogs</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Title </th>
                                <th> Category </th>
                                <th> Date </th>
                                <th> Details </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@blog.BlogImage" class="mr-2" alt="image"> @blog.BlogTitle
                                    </td>
                                    <td>
                                        <label class="badge badge-gradient-success">@blog.Category.CategoryName</label>
                                    </td>
                                    <td> @(((DateTime)blog.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                    <td>
                                        <a href="/Blog/BlogReadAll/@blog.BlogId"
                                        class="btn btn-dark">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
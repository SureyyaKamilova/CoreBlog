@using EntityLayer.Concrete
@model List<Blog>

<div class="tech-btm">
    <h3>Latest Posts</h3>
    @foreach (var blog in Model)
        {
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@blog.BlogId">
                <img src="@blog.BlogImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        
            <div class="col-md-7 blog-grid-right">

            <h5>
                    <a href="/Blog/BlogReadAll/@blog.BlogId">@blog.BlogContent.Substring(0, blog.BlogContent.Substring(0, 50).LastIndexOf(" "))</a>
            </h5>
            <div class="sub-meta">
                <span>
                        <i class="far fa-clock"></i>@(((DateTime)blog.BlogCreateDate).ToString("dd-MMM-yyyy"))
                </span>
            </div>
        </div>

    </div>
    }
</div>

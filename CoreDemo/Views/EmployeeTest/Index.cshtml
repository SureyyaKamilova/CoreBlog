@using CoreDemo.Controllers
@model List<Test>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Full Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td> <a href="/EmployeeTest/DeleteEmployee/@employee.Id" class="btn btn-outline-danger">Delete</a></td>
            <td> <a href="/EmployeeTest/EditEmployee/@employee.Id" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>
<a href="/EmployeeTest/AddEmployee/" class="btn btn-outline-primary">New Employee</a>




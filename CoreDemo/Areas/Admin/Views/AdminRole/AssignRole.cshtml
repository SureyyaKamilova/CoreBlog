@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form>
    @for(int i=0;i<Model.Count;i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].IsExsists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].IsExsists">@Model[i].Name</label>
            
        </div>
       
    }
    <button class="btn btn-info">Save Changes</button>
</form>
<a href="/Admin/AdminRole/UserRoleList/" class="btn btn-primary">Return User Role List</a>


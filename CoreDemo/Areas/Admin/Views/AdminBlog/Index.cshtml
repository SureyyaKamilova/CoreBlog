@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>


<body>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
            @foreach (var blog in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div >
                                <img src="@blog.BlogImage" height="225" width="220" />
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)blog.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                </span>
                                <small class="text-muted">@blog.Category.CategoryName</small>
                                <a href="#" class="product-name"> @blog.BlogTitle</a>

                                <div class="small m-t-xs">
                                    @blog.BlogContent.Substring(0,blog.BlogContent.Substring(0,100).LastIndexOf(" "))...    
                                </div>
                                <div class="m-t text-righ">

                                    <a href="/Blog/BlogReadAll/@blog.BlogId" class="btn btn-xs btn-outline btn-primary">Info <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
            </div>
</body>
</html>


